                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">No. Unit DT</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txt_noUnitDt" />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Berat Tara Unit(kg)</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="txt_beratTaraUnit" onkeyup="getTotalTonase()" />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Berat Bruto Unit(kg)</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="txt_beratBrutoUnit" onkeyup="getTotalTonase()" />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Total Tonase</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="txt_totalTonase" readonly="readonly" />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Tanggal</label>
                    </div>
