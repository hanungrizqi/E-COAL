
@{
    ViewBag.Title = "Request Coal";
}

<input type="hidden" id="hd_path" value="@ViewBag.path" />
<input type="hidden" id="hd_path" value="@ViewBag.path" />
<input type="hidden" id="hd_district" value="@Session["District"]" />
<input type="hidden" id="hd_userLogin" value="@Session["Nrp"]" />
<input type="hidden" id="hd_idProfile" value="@Session["IdProfile"]" />

<style>
    .img_center {
        text-align: center;
    }
</style>
<div id="form_main">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Request Coal</h3>
            @*<div class="block-options">
                    <button type="button" class="btn-block-option">
                        <i class="si si-settings"></i>
                    </button>
                </div>*@
        </div>
        <div class="block-content">
            <div class="row justify-content-center py-sm-3 py-md-5">

                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">MOM Cust</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="txt_momcost" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Volume Coal</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="txt_volumecoal" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Target GCV</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="txt_targetgcv" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Deadline</label>
                    </div>
                    <div class="col-md-9">
                        <input type="date" class="form-control" id="txt_deadline" />
                    </div>
                </div>

                <!--<div class="row mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Status (0)</label>
                    </div>
                    <div class="col-md-9">
                        <input type="number"-->
                @*value=0*@ <!--class="form-control" id="txt_status"--> @*readonly="readonly"*@
                <!--/>
                    </div>
                </div>-->


            </div>
            <!--<div class="block-content block-content-full">-->
            @*<table class="table table-bordered table-striped table-vcenter js-dataTable-responsive" id="tbl_opt"></table>*@
            <!--<div id="grid"></div>
            </div>-->
        </div>
        <div class="block-content block-content-full block-content-sm bg-body-light text-end">
            <button type="submit" class="btn btn-alt-info" onclick="Reset()">
                <i class="fa fa-check opacity-50 me-1"></i> Reset
            </button>
            <button type="submit" class="btn btn-alt-primary" onclick="submmit()">
                <i class="fa fa-check opacity-50 me-1"></i> Submit Request
            </button>
        </div>
    </div>

    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">CGV in ROM</h3>
        </div>
        <div class="block-content">
            @*<div class="block-content">
                    <button type="button" class="btn btn-alt-primary" data-bs-toggle="modal" data-bs-target="#modal-fadein">Update Image</button>
                </div>*@
            <button type="button" class="btn btn-alt-primary" data-bs-toggle="modal" data-bs-target="#modal-fadein">Update Image</button>
            @*Display Image*@
            <div class="img_center" id="DisplayImage">
                <img id="img_cgv" class="img-responsive thumbnail" width="320" height="320" />
            </div>
            <div class="row">
                <div class="col-md-3" style="text-align:center">
                    <lable id="tonase"></lable><br />
                    <lable style="color:red"><b>Tonase</b></lable>
                </div>
                <div class="col-md-3" style="text-align:center">
                    <lable id="grade_a"></lable><br />
                    <lable style="color:blue"><b>Grade A</b></lable>
                </div>
                <div class="col-md-3" style="text-align:center">
                    <lable id="grade_b"></lable><br />
                    <lable style="color:green"><b>Grade B</b></lable>
                </div>
                <div class="col-md-3" style="text-align:center">
                    <lable id="grade_c"></lable><br />
                    <lable style="color:chocolate"><b>Grade C</b></lable>
                </div>
            </div>
            <br />
        </div>
    </div>

