
@{
    ViewBag.Title = "Rating Operator";
}

<input type="hidden" id="hd_path" value="@ViewBag.path" />

<div id="form_main">
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Rating Operator</h3>
        </div>
        <div class="block-content">
            <div id="grid"></div>
        </div>
    </div>

    <div class="modal fade" id="modalUpdate" tabindex="-1" role="dialog" aria-labelledby="modal-popout" aria-hidden="true">
        <div class="modal-dialog modal-dialog-popout" role="document">
            <div class="modal-content">
                <div class="block block-rounded shadow-none mb-0">
                    <div class="block-header block-header-default">
                        <h3 class="block-title">Penilaian Operator</h3>
                        <div class="block-options">
                            <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="block-content fs-sm">
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Operator</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="txt_operator" readonly="readonly" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Pekerjaan</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="txt_pekerjaan" readonly="readonly" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Volume</label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" class="form-control" id="txt_volume" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Safety</label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" class="form-control" id="txt_safety" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Komunikasi</label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" class="form-control" id="txt_komunikasi" />
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <label class="form-label">Metode Kerja</label>
                            </div>
                            <div class="col-md-9">
                                <input type="number" class="form-control" id="txt_metodeKerja" />
                            </div>
                        </div>
                    </div>
                    <div class="block-content block-content-full block-content-sm text-end border-top">
                        <button type="button" class="btn btn-alt-secondary" data-bs-dismiss="modal">
                            Close
                        </button>
                        <button type="button" class="btn btn-alt-primary" data-bs-dismiss="modal" onclick="NilaiOperator()">
                            Nilai
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/x-kendo-tmpl" id="tmp_open">
    <button type="submit" class="btn btn-alt-primary" onclick="OpenModal(#=ID#)">Nilai</button>
</script>

<script src="~/Js/RatingOperator.Index.js"></script>